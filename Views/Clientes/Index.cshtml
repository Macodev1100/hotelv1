@model List<hotelv1.Models.Entities.Cliente>
@{
    ViewData["Title"] = "Clientes";
}
<div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="fw-bold mb-0"><i class="fas fa-users text-primary me-2"></i>Clientes</h2>
        <a href="/Clientes/Create" class="btn btn-primary shadow-sm"><i class="fas fa-plus me-1"></i>Nuevo Cliente</a>
    </div>
    <div class="card shadow-sm border-0 rounded-4">
        <div class="card-body p-0">
            <table class="table table-hover align-middle mb-0">
                <thead class="table-light">
                    <tr>
                        <th><i class="fas fa-user"></i> Nombre</th>
                        <th><i class="fas fa-user"></i> Apellido</th>
                        <th><i class="fas fa-envelope"></i> Email</th>
                        <th><i class="fas fa-phone"></i> Teléfono</th>
                        <th><i class="fas fa-map-marker-alt"></i> Dirección</th>
                        <th><i class="fas fa-calendar-alt"></i> Registro</th>
                        <th><i class="fas fa-check-circle"></i> Activo</th>
                        <th class="text-end">Acciones</th>
                    </tr>
                </thead>
                <tbody>
                @if (Model.Count == 0)
                {
                    <tr><td colspan="8" class="text-center text-muted py-4">No hay clientes registrados.</td></tr>
                }
                else
                {
                    foreach (var cliente in Model)
                    {
                        <tr>
                            <td>@cliente.Nombre</td>
                            <td>@cliente.Apellido</td>
                            <td>@cliente.Email</td>
                            <td>@cliente.Telefono</td>
                            <td>@cliente.Direccion</td>
                            <td>@cliente.FechaRegistro.ToShortDateString()</td>
                            <td>
                                @if (cliente.Activo)
                                {
                                    <span class="badge bg-success">Sí</span>
                                }
                                else
                                {
                                    <span class="badge bg-danger">No</span>
                                }
                            </td>
                            <td class="text-end">
                                <a href="/Clientes/Edit/@cliente.ClienteId" class="btn btn-sm btn-outline-warning me-1"><i class="fas fa-edit"></i></a>
                                <a href="/Clientes/Delete/@cliente.ClienteId" class="btn btn-sm btn-outline-danger"><i class="fas fa-trash-alt"></i></a>
                            </td>
                        </tr>
                    }
                }
                </tbody>
            </table>
        </div>
    </div>
</div>