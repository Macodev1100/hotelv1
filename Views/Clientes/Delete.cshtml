@model hotelv1.Models.Entities.Cliente
@{
    ViewData["Title"] = "Eliminar Cliente";
}
<h2>Eliminar Cliente</h2>
<div class="alert alert-danger">¿Estás seguro que deseas eliminar este cliente?</div>
<dl class="row">
    <dt class="col-sm-2">Nombre</dt>
    <dd class="col-sm-10">@Model.Nombre</dd>
    <dt class="col-sm-2">Apellido</dt>
    <dd class="col-sm-10">@Model.Apellido</dd>
    <dt class="col-sm-2">Teléfono</dt>
    <dd class="col-sm-10">@Model.Telefono</dd>
    <dt class="col-sm-2">Email</dt>
    <dd class="col-sm-10">@Model.Email</dd>
    <dt class="col-sm-2">Dirección</dt>
    <dd class="col-sm-10">@Model.Direccion</dd>
    <dt class="col-sm-2">Fecha Registro</dt>
    <dd class="col-sm-10">@Model.FechaRegistro.ToShortDateString()</dd>
    <dt class="col-sm-2">Activo</dt>
    <dd class="col-sm-10">@(Model.Activo ? "Sí" : "No")</dd>
</dl>
<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="ClienteId" />
    <button type="submit" class="btn btn-danger">Eliminar</button>
    <a href="/Clientes" class="btn btn-secondary">Cancelar</a>
</form>