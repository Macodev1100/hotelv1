@model hotelv1.ViewModels.ClienteViewModel
@{
    ViewData["Title"] = "Nuevo Cliente";
}
<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-lg border-0 rounded-4">
                <div class="card-body p-5">
                    <h2 class="mb-4 fw-bold text-primary"><i class="fas fa-user-plus me-2"></i>Nuevo Cliente</h2>
                    <form asp-action="Create" method="post" autocomplete="off">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
                        <div class="row g-3">
                            <div class="col-md-6">
                                <label asp-for="Nombre" class="form-label fw-semibold"></label>
                                <input asp-for="Nombre" class="form-control form-control-lg" placeholder="Nombre" />
                                <span asp-validation-for="Nombre" class="text-danger small"></span>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="Apellido" class="form-label fw-semibold"></label>
                                <input asp-for="Apellido" class="form-control form-control-lg" placeholder="Apellido" />
                                <span asp-validation-for="Apellido" class="text-danger small"></span>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="Telefono" class="form-label fw-semibold"></label>
                                <input asp-for="Telefono" class="form-control form-control-lg" placeholder="Teléfono" />
                                <span asp-validation-for="Telefono" class="text-danger small"></span>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="Email" class="form-label fw-semibold"></label>
                                <input asp-for="Email" class="form-control form-control-lg" placeholder="Email" />
                                <span asp-validation-for="Email" class="text-danger small"></span>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="Direccion" class="form-label fw-semibold"></label>
                                <input asp-for="Direccion" class="form-control form-control-lg" placeholder="Dirección" />
                                <span asp-validation-for="Direccion" class="text-danger small"></span>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="FechaRegistro" class="form-label fw-semibold"></label>
                                <input asp-for="FechaRegistro" class="form-control form-control-lg" type="date" />
                                <span asp-validation-for="FechaRegistro" class="text-danger small"></span>
                            </div>
                            <div class="col-12">
                                <div class="form-check form-switch mt-2">
                                    <input asp-for="Activo" class="form-check-input" type="checkbox" role="switch" id="activoSwitch" />
                                    <label asp-for="Activo" class="form-check-label" for="activoSwitch">Activo</label>
                                </div>
                            </div>
                        </div>
                        <div class="mt-4 d-flex justify-content-end gap-2">
                            <button type="submit" class="btn btn-success btn-lg px-4"><i class="fas fa-save me-2"></i>Guardar</button>
                            <a href="/Clientes" class="btn btn-secondary btn-lg px-4"><i class="fas fa-times me-2"></i>Cancelar</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>