@model hotelv1.Models.Entities.Empleado
@{
    ViewData["Title"] = "Eliminar Empleado";
}
<h2>Eliminar Empleado</h2>
<div class="alert alert-danger">¿Estás seguro que deseas eliminar este empleado?</div>
<dl class="row">
    <dt class="col-sm-2">Nombre</dt>
    <dd class="col-sm-10">@Model.Nombre</dd>
    <dt class="col-sm-2">Apellido</dt>
    <dd class="col-sm-10">@Model.Apellido</dd>
    <dt class="col-sm-2">Puesto</dt>
    <dd class="col-sm-10">@Model.Puesto</dd>
    <dt class="col-sm-2">Teléfono</dt>
    <dd class="col-sm-10">@Model.Telefono</dd>
    <dt class="col-sm-2">Email</dt>
    <dd class="col-sm-10">@Model.Email</dd>
    <dt class="col-sm-2">Fecha Contratación</dt>
    <dd class="col-sm-10">@Model.FechaContratacion.ToShortDateString()</dd>
    <dt class="col-sm-2">Activo</dt>
    <dd class="col-sm-10">@(Model.Activo ? "Sí" : "No")</dd>
</dl>
<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="EmpleadoId" />
    <button type="submit" class="btn btn-danger">Eliminar</button>
    <a href="/Empleados" class="btn btn-secondary">Cancelar</a>
</form>