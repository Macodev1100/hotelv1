@model hotelv1.Models.Entities.Empleado
@{
    ViewData["Title"] = "Detalle Empleado";
}
<div class="container py-4">
    <div class="card shadow-sm col-md-6 mx-auto">
        <div class="card-header bg-primary text-white">
            <h4 class="mb-0"><i class="fas fa-user-tie me-2"></i>Detalle del Empleado</h4>
        </div>
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-4">Nombre</dt>
                <dd class="col-sm-8">@Model.Nombre</dd>
                <dt class="col-sm-4">Apellido</dt>
                <dd class="col-sm-8">@Model.Apellido</dd>
                <dt class="col-sm-4">Puesto</dt>
                <dd class="col-sm-8">@Model.Puesto</dd>
                <dt class="col-sm-4">Teléfono</dt>
                <dd class="col-sm-8">@Model.Telefono</dd>
                <dt class="col-sm-4">Email</dt>
                <dd class="col-sm-8">@Model.Email</dd>
                <dt class="col-sm-4">Fecha Contratación</dt>
                <dd class="col-sm-8">@Model.FechaContratacion.ToShortDateString()</dd>
                <dt class="col-sm-4">Activo</dt>
                <dd class="col-sm-8">@(Model.Activo ? "Sí" : "No")</dd>
            </dl>
            <a href="/Empleados/Edit/@Model.EmpleadoId" class="btn btn-warning me-2"><i class="fas fa-edit"></i> Editar</a>
            <a href="/Empleados" class="btn btn-secondary">Volver</a>
        </div>
    </div>
</div>
