@model List<hotelv1.Models.Entities.Empleado>
@{
    ViewData["Title"] = "Empleados";
}
<div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="fw-bold mb-0"><i class="fas fa-user-tie text-info me-2"></i>Empleados</h2>
        <a href="/Empleados/Create" class="btn btn-primary shadow-sm"><i class="fas fa-plus me-1"></i>Nuevo Empleado</a>
    </div>
    <div class="card shadow-sm border-0 rounded-4">
        <div class="card-body p-0">
            <table class="table table-hover align-middle mb-0">
                <thead class="table-light">
                    <tr>
                        <th><i class="fas fa-user"></i> Nombre</th>
                        <th><i class="fas fa-user"></i> Apellido</th>
                        <th><i class="fas fa-briefcase"></i> Puesto</th>
                        <th><i class="fas fa-phone"></i> Teléfono</th>
                        <th><i class="fas fa-envelope"></i> Email</th>
                        <th><i class="fas fa-calendar-alt"></i> Contratación</th>
                        <th><i class="fas fa-check-circle"></i> Activo</th>
                        <th class="text-end">Acciones</th>
                    </tr>
                </thead>
                <tbody>
                @if (Model.Count == 0)
                {
                    <tr><td colspan="8" class="text-center text-muted py-4">No hay empleados registrados.</td></tr>
                }
                else
                {
                    foreach (var empleado in Model)
                    {
                        <tr>
                            <td>@empleado.Nombre</td>
                            <td>@empleado.Apellido</td>
                            <td>@empleado.Puesto</td>
                            <td>@empleado.Telefono</td>
                            <td>@empleado.Email</td>
                            <td>@empleado.FechaContratacion.ToShortDateString()</td>
                            <td>
                                @if (empleado.Activo)
                                {
                                    <span class="badge bg-success">Sí</span>
                                }
                                else
                                {
                                    <span class="badge bg-danger">No</span>
                                }
                            </td>
                            <td class="text-end">
                                <a href="/Empleados/Edit/@empleado.EmpleadoId" class="btn btn-sm btn-outline-warning me-1"><i class="fas fa-edit"></i></a>
                                <a href="/Empleados/Delete/@empleado.EmpleadoId" class="btn btn-sm btn-outline-danger"><i class="fas fa-trash-alt"></i></a>
                            </td>
                        </tr>
                    }
                }
                </tbody>
            </table>
        </div>
    </div>
</div>