@model hotelv1.ViewModels.EmpleadoViewModel
@{
    ViewData["Title"] = "Editar Empleado";
}
<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-lg border-0 rounded-4 animate__animated animate__fadeInUp animate__faster">
                <div class="card-body p-5">
                    <h2 class="mb-4 fw-bold text-info"><i class="fas fa-user-edit me-2"></i>Editar Empleado</h2>
                    <form asp-action="Edit" method="post" autocomplete="off">
                        <input type="hidden" asp-for="EmpleadoId" />
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
                        <div class="row g-3">
                            <div class="col-md-6">
                                <label asp-for="Nombre" class="form-label fw-semibold"><i class="fas fa-user me-1"></i>Nombre</label>
                                <input asp-for="Nombre" class="form-control form-control-lg" placeholder="Nombre del empleado" />
                                <span asp-validation-for="Nombre" class="text-danger small"></span>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="Apellido" class="form-label fw-semibold"><i class="fas fa-user me-1"></i>Apellido</label>
                                <input asp-for="Apellido" class="form-control form-control-lg" placeholder="Apellido del empleado" />
                                <span asp-validation-for="Apellido" class="text-danger small"></span>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="Puesto" class="form-label fw-semibold"><i class="fas fa-briefcase me-1"></i>Puesto</label>
                                <select asp-for="Puesto" class="form-select form-select-lg">
                                    <option value="">Seleccione un puesto</option>
                                    <option value="Recepcionista">Recepcionista</option>
                                    <option value="Mantenimiento">Mantenimiento</option>
                                    <option value="Gerente">Gerente</option>
                                    <option value="Administrador">Administrador</option>
                                </select>
                                <span asp-validation-for="Puesto" class="text-danger small"></span>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="Telefono" class="form-label fw-semibold"><i class="fas fa-phone me-1"></i>Teléfono</label>
                                <input asp-for="Telefono" class="form-control form-control-lg" placeholder="Teléfono" />
                                <span asp-validation-for="Telefono" class="text-danger small"></span>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="Email" class="form-label fw-semibold"><i class="fas fa-envelope me-1"></i>Email</label>
                                <input asp-for="Email" class="form-control form-control-lg" placeholder="Correo electrónico" />
                                <span asp-validation-for="Email" class="text-danger small"></span>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="FechaContratacion" class="form-label fw-semibold"><i class="fas fa-calendar-day me-1"></i>Fecha de Contratación</label>
                                <input asp-for="FechaContratacion" class="form-control form-control-lg" type="date" />
                                <span asp-validation-for="FechaContratacion" class="text-danger small"></span>
                            </div>
                            <div class="col-12">
                                <div class="form-check form-switch mt-2">
                                    <input asp-for="Activo" class="form-check-input" id="Activo" />
                                    <label asp-for="Activo" class="form-check-label fw-semibold" for="Activo"><i class="fas fa-check-circle me-1"></i>Activo</label>
                                </div>
                            </div>
                        </div>
                        <div class="mt-4 d-flex justify-content-end gap-2">
                            <button type="submit" class="btn btn-success btn-lg px-4"><i class="fas fa-save me-2"></i>Guardar</button>
                            <a href="/Empleados" class="btn btn-secondary btn-lg px-4"><i class="fas fa-times me-2"></i>Cancelar</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
@section Styles {
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css" />
}