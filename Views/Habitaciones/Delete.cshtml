@model hotelv1.Models.Entities.Habitacion
@{
    ViewData["Title"] = "Eliminar Habitación";
}
<h2>Eliminar Habitación</h2>
<div class="alert alert-danger">¿Estás seguro que deseas eliminar esta habitación?</div>
<dl class="row">
    <dt class="col-sm-2">Número</dt>
    <dd class="col-sm-10">@Model.Numero</dd>
    <dt class="col-sm-2">Tipo</dt>
    <dd class="col-sm-10">@Model.Tipo</dd>
    <dt class="col-sm-2">Precio por Noche</dt>
    <dd class="col-sm-10">@Model.PrecioPorNoche.ToString("C")</dd>
    <dt class="col-sm-2">Descripción</dt>
    <dd class="col-sm-10">@Model.Descripcion</dd>
</dl>
<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="HabitacionId" />
    <button type="submit" class="btn btn-danger">Eliminar</button>
    <a href="/Habitaciones" class="btn btn-secondary">Cancelar</a>
</form>