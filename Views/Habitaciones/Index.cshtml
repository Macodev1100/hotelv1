@model List<hotelv1.Models.Entities.Habitacion>
@{
    ViewData["Title"] = "Habitaciones";
}
<div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="fw-bold mb-0"><i class="fas fa-bed text-success me-2"></i>Habitaciones</h2>
        <a href="/Habitaciones/Create" class="btn btn-primary shadow-sm"><i class="fas fa-plus me-1"></i>Nueva Habitación</a>
    </div>
    <div class="card shadow-sm border-0 rounded-4">
        <div class="card-body p-0">
            <table class="table table-hover align-middle mb-0">
                <thead class="table-light">
                    <tr>
                        <th><i class="fas fa-hashtag"></i> Número</th>
                        <th><i class="fas fa-door-closed"></i> Tipo</th>
                        <th><i class="fas fa-dollar-sign"></i> Precio/Noche</th>
                        <th><i class="fas fa-check-circle"></i> Disponible</th>
                        <th><i class="fas fa-align-left"></i> Descripción</th>
                        <th class="text-end">Acciones</th>
                    </tr>
                </thead>
                <tbody>
                @if (Model.Count == 0)
                {
                    <tr><td colspan="6" class="text-center text-muted py-4">No hay habitaciones registradas.</td></tr>
                }
                else
                {
                    foreach (var habitacion in Model)
                    {
                        <tr>
                            <td>@habitacion.Numero</td>
                            <td>@habitacion.Tipo</td>
                            <td>@habitacion.PrecioPorNoche.ToString("C")</td>
                            <td>
                                @if (habitacion.Disponible)
                                {
                                    <span class="badge bg-success">Sí</span>
                                }
                                else
                                {
                                    <span class="badge bg-danger">No</span>
                                }
                            </td>
                            <td>@habitacion.Descripcion</td>
                            <td class="text-end">
                                <a href="/Habitaciones/Edit/@habitacion.HabitacionId" class="btn btn-sm btn-outline-warning me-1"><i class="fas fa-edit"></i></a>
                                <a href="/Habitaciones/Delete/@habitacion.HabitacionId" class="btn btn-sm btn-outline-danger"><i class="fas fa-trash-alt"></i></a>
                            </td>
                        </tr>
                    }
                }
                </tbody>
            </table>
        </div>
    </div>
</div>