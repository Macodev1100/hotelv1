@model hotelv1.Models.Entities.Habitacion
@{
    ViewData["Title"] = "Detalle Habitación";
}
<div class="container py-4">
    <div class="card shadow-sm col-md-6 mx-auto">
        <div class="card-header bg-primary text-white">
            <h4 class="mb-0"><i class="fas fa-bed me-2"></i>Detalle de la Habitación</h4>
        </div>
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-4">Número</dt>
                <dd class="col-sm-8">@Model.Numero</dd>
                <dt class="col-sm-4">Tipo</dt>
                <dd class="col-sm-8">@Model.Tipo</dd>
                <dt class="col-sm-4">Precio</dt>
                <dd class="col-sm-8">@Model.PrecioPorNoche.ToString("C")</dd>
            </dl>
            <a href="/Habitaciones/Edit/@Model.HabitacionId" class="btn btn-warning me-2"><i class="fas fa-edit"></i> Editar</a>
            <a href="/Habitaciones" class="btn btn-secondary">Volver</a>
        </div>
    </div>
</div>
