<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - hotelv1</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" integrity="sha512-..." crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/hotelv1.styles.css" asp-append-version="true" />
    <style>
        html, body {
            background: #dbeafe !important; /* Celeste muy suave, uniforme en todo el sistema */
        }
        .navbar { background: linear-gradient(90deg, #003366 0%, #005fa3 100%); }
        .navbar-brand, .nav-link, .dropdown-item { color: #fff !important; }
        .navbar-brand { font-weight: bold; letter-spacing: 1px; }
        .nav-link.active, .nav-link:hover { color: #ffd700 !important; }
        .dropdown-menu { background: #003366; }
        .dropdown-item:hover { background: #005fa3; color: #ffd700 !important; }
        .btn-primary { background: #005fa3; border: none; }
        .btn-primary:hover { background: #003366; }
        .form-control:focus { border-color: #005fa3; box-shadow: 0 0 0 0.2rem rgba(0,95,163,.25); }
        .login-panel { background: #fff; border-radius: 12px; box-shadow: 0 2px 16px rgba(0,0,0,0.08); padding: 2rem; }
    </style>
</head>
<body>
    @{
        var path = Context.Request.Path.Value?.ToLower();
        var hideNav = path != null && (path.Contains("/account/login") || path.Contains("/account/register"));
    }
    @if (!hideNav)
    {
        <header>
            <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
                <div class="container-fluid">
                    <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">hotelv1</a>
                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                            aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                        <ul class="navbar-nav flex-grow-1">
                            @if (User.Identity.IsAuthenticated)
                            {
                                <li class="nav-item">
                                    @if (!User.IsInRole("Recepcionista"))
                                    {
                                        <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Dashboard"><i class="fas fa-tachometer-alt me-1"></i>Panel</a>
                                    }
                                </li>
                                @if (User.IsInRole("Administrador") || User.IsInRole("Recepcionista") || User.IsInRole("Gerente"))
                                {
                                    <li class="nav-item">
                                        <a class="nav-link text-dark" asp-area="" asp-controller="Clientes" asp-action="Index">Clientes</a>
                                    </li>
                                }
                                @if (User.IsInRole("Administrador") || User.IsInRole("Gerente"))
                                {
                                    <li class="nav-item">
                                        <a class="nav-link text-dark" asp-area="" asp-controller="Empleados" asp-action="Index">Empleados</a>
                                    </li>
                                }
                                @if (User.IsInRole("Administrador") || User.IsInRole("Recepcionista") || User.IsInRole("Gerente"))
                                {
                                    <li class="nav-item">
                                        <a class="nav-link text-dark" asp-area="" asp-controller="Habitaciones" asp-action="Index">Habitaciones</a>
                                    </li>
                                }
                                @if (User.IsInRole("Administrador") || User.IsInRole("Recepcionista") || User.IsInRole("Gerente"))
                                {
                                    <li class="nav-item">
                                        <a class="nav-link text-dark" asp-area="" asp-controller="Reservas" asp-action="Index">Reservas</a>
                                    </li>
                                }
                                @if (User.IsInRole("Administrador") || User.IsInRole("Recepcionista") || User.IsInRole("Gerente"))
                                {
                                    <li class="nav-item">
                                        <a class="nav-link text-dark" asp-area="" asp-controller="Facturas" asp-action="Index">Facturas</a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link text-dark" asp-area="" asp-controller="Servicios" asp-action="Index">Servicios</a>
                                    </li>
                                }
                            }
                        </ul>
                        <partial name="_LoginPartial" />
                    </div>
                </div>
            </nav>
        </header>
    }
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - hotelv1 - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
