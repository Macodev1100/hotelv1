@model hotelv1.ViewModels.ReservaViewModel
@{
    ViewData["Title"] = "Editar Reserva";
}
<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-md-10">
            <div class="card shadow-lg border-0 rounded-4 animate__animated animate__fadeInUp animate__faster">
                <div class="card-body p-5">
                    <h2 class="mb-4 fw-bold text-info"><i class="fas fa-calendar-check me-2"></i>Editar Reserva</h2>
                    <form asp-action="Edit" method="post" autocomplete="off">
                        <!-- Campo oculto ReservaId eliminado porque no existe en el ViewModel -->
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
                        <div class="row g-3">
                            <div class="col-md-6">
                                <label asp-for="ClienteId" class="form-label fw-semibold"><i class="fas fa-user me-1"></i>Cliente</label>
                                <select asp-for="ClienteId" class="form-select form-select-lg">
                                    <option value="">Seleccione un cliente</option>
                                    @if (Model.Clientes != null)
                                    {
                                        foreach (var cliente in Model.Clientes)
                                        {
                                            var attrs = $"value=\"{cliente.ClienteId}\"";
                                            if (Model.ClienteId == cliente.ClienteId) attrs += " selected";
                                            @Html.Raw($"<option {attrs}>{cliente.Nombre} {cliente.Apellido}</option>")
                                        }
                                    }
                                </select>
                                <span asp-validation-for="ClienteId" class="text-danger small"></span>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="HabitacionId" class="form-label fw-semibold"><i class="fas fa-bed me-1"></i>Habitaci칩n</label>
                                <select asp-for="HabitacionId" class="form-select form-select-lg" id="HabitacionId" name="HabitacionId">
                                    <option value="">Seleccione una habitaci칩n</option>
                                    @if (Model.Habitaciones != null)
                                    {
                                        foreach (var hab in Model.Habitaciones)
                                        {
                                            var attrs = $"value=\"{hab.HabitacionId}\" data-precio=\"{hab.PrecioPorNoche}\"";
                                            if (Model.HabitacionId == hab.HabitacionId) attrs += " selected";
                                            @Html.Raw($"<option {attrs}>{hab.Numero} - {hab.Tipo}</option>")
                                        }
                                    }
                                </select>
                                <span asp-validation-for="HabitacionId" class="text-danger small"></span>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="FechaEntrada" class="form-label fw-semibold"><i class="fas fa-calendar-day me-1"></i>Fecha de Entrada</label>
                                <input asp-for="FechaEntrada" class="form-control form-control-lg" type="date" id="FechaEntrada" />
                                <span asp-validation-for="FechaEntrada" class="text-danger small"></span>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="FechaSalida" class="form-label fw-semibold"><i class="fas fa-calendar-day me-1"></i>Fecha de Salida</label>
                                <input asp-for="FechaSalida" class="form-control form-control-lg" type="date" id="FechaSalida" />
                                <span asp-validation-for="FechaSalida" class="text-danger small"></span>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="Estado" class="form-label fw-semibold"><i class="fas fa-info-circle me-1"></i>Estado</label>
                                <input asp-for="Estado" class="form-control form-control-lg" placeholder="Estado" />
                                <span asp-validation-for="Estado" class="text-danger small"></span>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="Total" class="form-label fw-semibold"><i class="fas fa-dollar-sign me-1"></i>Total</label>
                                <input asp-for="Total" class="form-control form-control-lg" readonly id="Total" />
                                <span asp-validation-for="Total" class="text-danger small"></span>
                            </div>
                        </div>
                        <div class="mt-4 d-flex justify-content-end gap-2">
                            <button type="submit" class="btn btn-success btn-lg px-4"><i class="fas fa-save me-2"></i>Guardar</button>
                            <a href="/Reservas" class="btn btn-secondary btn-lg px-4"><i class="fas fa-times me-2"></i>Cancelar</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
@section Styles {
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css" />
}
@section Scripts {
    <script>
        // C치lculo din치mico del total
        function calcularTotal() {
            var fechaEntrada = new Date(document.getElementById('FechaEntrada').value);
            var fechaSalida = new Date(document.getElementById('FechaSalida').value);
            var selectHab = document.getElementById('HabitacionId');
            var precio = 0;
            if (selectHab && selectHab.selectedIndex > 0) {
                precio = parseFloat(selectHab.options[selectHab.selectedIndex].getAttribute('data-precio')) || 0;
            }
            var dias = (fechaSalida - fechaEntrada) / (1000 * 60 * 60 * 24);
            if (dias > 0 && precio > 0) {
                document.getElementById('Total').value = (dias * precio).toFixed(2);
            } else {
                document.getElementById('Total').value = '';
            }
        }
        document.getElementById('FechaEntrada').addEventListener('change', calcularTotal);
        document.getElementById('FechaSalida').addEventListener('change', calcularTotal);
        document.getElementById('HabitacionId').addEventListener('change', calcularTotal);
        window.onload = calcularTotal;
    </script>
}