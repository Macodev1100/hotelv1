@model hotelv1.ViewModels.ReservaViewModel
@{
    ViewData["Title"] = "Editar Reserva";
}
<div class="row justify-content-center mt-4">
    <div class="col-md-8 col-lg-6">
        <div class="card shadow-lg border-0">
            <div class="card-header bg-primary text-white text-center">
                <h3 class="mb-0"><i class="fas fa-calendar-edit me-2"></i>Editar Reserva</h3>
            </div>
            <div class="card-body p-4">
                <form asp-action="Edit" method="post" autocomplete="off">
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                    <div class="mb-3">
                        <label asp-for="ClienteId" class="form-label fw-semibold"><i class="fas fa-user me-1"></i>Cliente</label>
                        <select asp-for="ClienteId" class="form-select form-select-lg" asp-items="@(new SelectList(Model.Clientes, "ClienteId", "Nombre"))">
                            <option value="">Seleccione un cliente</option>
                        </select>
                        <span asp-validation-for="ClienteId" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="HabitacionId" class="form-label fw-semibold"><i class="fas fa-bed me-1"></i>Habitación</label>
                        <select asp-for="HabitacionId" class="form-select form-select-lg" asp-items="@(new SelectList(Model.Habitaciones, "HabitacionId", "Numero"))">
                            <option value="">Seleccione una habitación</option>
                        </select>
                        <span asp-validation-for="HabitacionId" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="FechaEntrada" class="form-label fw-semibold"><i class="fas fa-calendar-day me-1"></i>Fecha de Entrada</label>
                        <input asp-for="FechaEntrada" class="form-control form-control-lg" type="date" />
                        <span asp-validation-for="FechaEntrada" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="FechaSalida" class="form-label fw-semibold"><i class="fas fa-calendar-day me-1"></i>Fecha de Salida</label>
                        <input asp-for="FechaSalida" class="form-control form-control-lg" type="date" />
                        <span asp-validation-for="FechaSalida" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="Total" class="form-label fw-semibold"><i class="fas fa-dollar-sign me-1"></i>Total</label>
                        <input asp-for="Total" class="form-control form-control-lg" placeholder="Total de la reserva" />
                        <span asp-validation-for="Total" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="Estado" class="form-label fw-semibold"><i class="fas fa-info-circle me-1"></i>Estado</label>
                        <input asp-for="Estado" class="form-control form-control-lg" placeholder="Ej: Confirmada, Pendiente, Cancelada" />
                        <span asp-validation-for="Estado" class="text-danger"></span>
                    </div>
                    <div class="d-flex justify-content-between mt-4">
                        <button type="submit" class="btn btn-success btn-lg px-4"><i class="fas fa-save me-2"></i>Guardar</button>
                        <a href="/Reservas" class="btn btn-secondary btn-lg px-4"><i class="fas fa-times me-2"></i>Cancelar</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>