@model hotelv1.Models.Entities.Reserva
@{
    ViewData["Title"] = "Eliminar Reserva";
}
<h2>Eliminar Reserva</h2>
<div class="alert alert-danger">¿Estás seguro que deseas eliminar esta reserva?</div>
<dl class="row">
    <dt class="col-sm-2">ClienteId</dt>
    <dd class="col-sm-10">@Model.ClienteId</dd>
    <dt class="col-sm-2">HabitacionId</dt>
    <dd class="col-sm-10">@Model.HabitacionId</dd>
    <dt class="col-sm-2">Fecha Entrada</dt>
    <dd class="col-sm-10">@Model.FechaEntrada.ToShortDateString()</dd>
    <dt class="col-sm-2">Fecha Salida</dt>
    <dd class="col-sm-10">@Model.FechaSalida.ToShortDateString()</dd>
    <dt class="col-sm-2">Total</dt>
    <dd class="col-sm-10">@Model.Total.ToString("C")</dd>
    <dt class="col-sm-2">Estado</dt>
    <dd class="col-sm-10">@Model.Estado</dd>
</dl>
<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="ReservaId" />
    <button type="submit" class="btn btn-danger">Eliminar</button>
    <a href="/Reservas" class="btn btn-secondary">Cancelar</a>
</form>