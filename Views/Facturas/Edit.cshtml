@model hotelv1.ViewModels.FacturaViewModel
@{
    ViewData["Title"] = "Editar Factura";
}
<div class="row justify-content-center mt-4">
    <div class="col-md-8 col-lg-6">
        <div class="card shadow-lg border-0">
            <div class="card-header bg-primary text-white text-center">
                <h3 class="mb-0"><i class="fas fa-file-invoice-dollar me-2"></i>Editar Factura</h3>
            </div>
            <div class="card-body p-4">
                <form asp-action="Edit" method="post" autocomplete="off">
                    <input type="hidden" asp-for="FacturaId" />
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                    <div class="mb-3">
                        <label asp-for="ReservaId" class="form-label fw-semibold"><i class="fas fa-calendar-check me-1"></i>ID Reserva</label>
                        <input asp-for="ReservaId" class="form-control form-control-lg" placeholder="ID de la reserva" />
                        <span asp-validation-for="ReservaId" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="FechaEmision" class="form-label fw-semibold"><i class="fas fa-calendar-day me-1"></i>Fecha de Emisi√≥n</label>
                        <input asp-for="FechaEmision" class="form-control form-control-lg" type="date" />
                        <span asp-validation-for="FechaEmision" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="MontoTotal" class="form-label fw-semibold"><i class="fas fa-dollar-sign me-1"></i>Monto Total</label>
                        <input asp-for="MontoTotal" class="form-control form-control-lg" placeholder="Monto total de la factura" />
                        <span asp-validation-for="MontoTotal" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="Detalle" class="form-label fw-semibold"><i class="fas fa-align-left me-1"></i>Detalle</label>
                        <input asp-for="Detalle" class="form-control form-control-lg" placeholder="Detalle de la factura" />
                        <span asp-validation-for="Detalle" class="text-danger"></span>
                    </div>
                    <div class="d-flex justify-content-between mt-4">
                        <button type="submit" class="btn btn-success btn-lg px-4"><i class="fas fa-save me-2"></i>Guardar</button>
                        <a href="/Facturas" class="btn btn-secondary btn-lg px-4"><i class="fas fa-times me-2"></i>Cancelar</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>