@model hotelv1.Models.Entities.Factura
@{
    ViewData["Title"] = "Eliminar Factura";
}
<h2>Eliminar Factura</h2>
<div class="alert alert-danger">¿Estás seguro que deseas eliminar esta factura?</div>
<dl class="row">
    <dt class="col-sm-2">ReservaId</dt>
    <dd class="col-sm-10">@Model.ReservaId</dd>
    <dt class="col-sm-2">Monto Total</dt>
    <dd class="col-sm-10">@Model.MontoTotal.ToString("C")</dd>
    <dt class="col-sm-2">Detalle</dt>
    <dd class="col-sm-10">@Model.Detalle</dd>
</dl>
<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="FacturaId" />
    <button type="submit" class="btn btn-danger">Eliminar</button>
    <a href="/Facturas" class="btn btn-secondary">Cancelar</a>
</form>