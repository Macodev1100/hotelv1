@model List<hotelv1.Models.Entities.Factura>
@{
    ViewData["Title"] = "Facturas";
}
<div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="fw-bold mb-0"><i class="fas fa-file-invoice-dollar text-danger me-2"></i>Facturas</h2>
        <a href="/Facturas/Create" class="btn btn-primary shadow-sm"><i class="fas fa-plus me-1"></i>Nueva Factura</a>
    </div>
    <div class="card shadow-sm border-0 rounded-4">
        <div class="card-body p-0">
            <table class="table table-hover align-middle mb-0">
                <thead class="table-light">
                    <tr>
                        <th><i class="fas fa-calendar-check"></i> Reserva</th>
                        <th><i class="fas fa-calendar-alt"></i> Emisi√≥n</th>
                        <th><i class="fas fa-dollar-sign"></i> Monto</th>
                        <th><i class="fas fa-align-left"></i> Detalle</th>
                        <th class="text-end">Acciones</th>
                    </tr>
                </thead>
                <tbody>
                @if (Model.Count == 0)
                {
                    <tr><td colspan="5" class="text-center text-muted py-4">No hay facturas registradas.</td></tr>
                }
                else
                {
                    foreach (var factura in Model)
                    {
                        <tr>
                            <td>@factura.ReservaId</td>
                            <td>@factura.FechaEmision.ToShortDateString()</td>
                            <td><span class="badge bg-success">@factura.MontoTotal.ToString("C")</span></td>
                            <td>@factura.Detalle</td>
                            <td class="text-end">
                                <a href="/Facturas/Edit/@factura.FacturaId" class="btn btn-sm btn-outline-warning me-1"><i class="fas fa-edit"></i></a>
                                <a href="/Facturas/Delete/@factura.FacturaId" class="btn btn-sm btn-outline-danger"><i class="fas fa-trash-alt"></i></a>
                            </td>
                        </tr>
                    }
                }
                </tbody>
            </table>
        </div>
    </div>
</div>