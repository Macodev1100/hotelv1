@model hotelv1.Models.Entities.Servicio
@{
    ViewData["Title"] = "Editar Servicio";
}
<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-lg border-0 rounded-4 animate__animated animate__fadeInUp animate__faster">
                <div class="card-body p-5">
                    <h2 class="mb-4 fw-bold text-warning"><i class="fas fa-concierge-bell me-2"></i>Editar Servicio</h2>
                    <form asp-action="Edit" method="post" autocomplete="off">
                        <input type="hidden" asp-for="ServicioId" />
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
                        <div class="mb-4">
                            <label asp-for="Nombre" class="form-label fw-semibold"><i class="fas fa-concierge-bell me-1"></i>Nombre</label>
                            <input asp-for="Nombre" class="form-control form-control-lg shadow-sm" placeholder="Nombre del servicio" />
                            <span asp-validation-for="Nombre" class="text-danger small"></span>
                        </div>
                        <div class="mb-4">
                            <label asp-for="Descripcion" class="form-label fw-semibold"><i class="fas fa-align-left me-1"></i>Descripción</label>
                            <input asp-for="Descripcion" class="form-control form-control-lg shadow-sm" placeholder="Descripción" />
                            <span asp-validation-for="Descripcion" class="text-danger small"></span>
                        </div>
                        <div class="mb-4">
                            <label asp-for="Precio" class="form-label fw-semibold"><i class="fas fa-dollar-sign me-1"></i>Precio</label>
                            <input asp-for="Precio" class="form-control form-control-lg shadow-sm" placeholder="Precio" />
                            <span asp-validation-for="Precio" class="text-danger small"></span>
                        </div>
                        <div class="mt-4 d-flex justify-content-end gap-2">
                            <button type="submit" class="btn btn-success btn-lg px-4"><i class="fas fa-save me-2"></i>Guardar</button>
                            <a href="/Servicios" class="btn btn-secondary btn-lg px-4"><i class="fas fa-times me-2"></i>Cancelar</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
@section Styles {
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css" />
}