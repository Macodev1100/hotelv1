
@model hotelv1.Models.Entities.Servicio
@{
    ViewData["Title"] = "Nuevo Servicio";
}
<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-lg border-0 rounded-4 animate__animated animate__fadeInUp animate__faster">
                <div class="card-body p-5">
                    <h2 class="mb-4 fw-bold text-info"><i class="fas fa-concierge-bell me-2"></i>Nuevo Servicio</h2>
                    <form asp-action="Create" method="post" autocomplete="off">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
                        <div class="row g-3">
                            <div class="col-md-6">
                                <label asp-for="Nombre" class="form-label fw-semibold"></label>
                                <input asp-for="Nombre" class="form-control form-control-lg" placeholder="Nombre del servicio" />
                                <span asp-validation-for="Nombre" class="text-danger small"></span>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="Descripcion" class="form-label fw-semibold"></label>
                                <input asp-for="Descripcion" class="form-control form-control-lg" placeholder="DescripciÃ³n" />
                                <span asp-validation-for="Descripcion" class="text-danger small"></span>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="Precio" class="form-label fw-semibold"></label>
                                <input asp-for="Precio" class="form-control form-control-lg" placeholder="Precio" />
                                <span asp-validation-for="Precio" class="text-danger small"></span>
                            </div>
                        </div>
                        <div class="mt-4 d-flex justify-content-end gap-2">
                            <button type="submit" class="btn btn-success btn-lg px-4"><i class="fas fa-save me-2"></i>Guardar</button>
                            <a href="/Servicios" class="btn btn-secondary btn-lg px-4"><i class="fas fa-times me-2"></i>Cancelar</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
@section Styles {
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css" />
}