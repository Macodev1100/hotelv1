@model List<hotelv1.Models.Entities.Servicio>
@{
    ViewData["Title"] = "Servicios";
}
<div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="fw-bold mb-0"><i class="fas fa-concierge-bell text-primary me-2"></i>Servicios</h2>
        <a href="/Servicios/Create" class="btn btn-primary shadow-sm"><i class="fas fa-plus me-1"></i>Nuevo Servicio</a>
    </div>
    <div class="card shadow-sm border-0 rounded-4">
        <div class="card-body p-0">
            <table class="table table-hover align-middle mb-0">
                <thead class="table-light">
                    <tr>
                        <th>Nombre</th>
                        <th>Descripci√≥n</th>
                        <th>Precio</th>
                        <th class="text-end">Acciones</th>
                    </tr>
                </thead>
                <tbody>
                @if (Model.Count == 0)
                {
                    <tr><td colspan="4" class="text-center text-muted py-4">No hay servicios registrados.</td></tr>
                }
                else
                {
                    foreach (var servicio in Model)
                    {
                        <tr>
                            <td>@servicio.Nombre</td>
                            <td>@servicio.Descripcion</td>
                            <td>@servicio.Precio.ToString("C")</td>
                            <td class="text-end">
                                <a href="/Servicios/Edit/@servicio.ServicioId" class="btn btn-sm btn-outline-warning me-1"><i class="fas fa-edit"></i></a>
                                <a href="/Servicios/Delete/@servicio.ServicioId" class="btn btn-sm btn-outline-danger"><i class="fas fa-trash-alt"></i></a>
                            </td>
                        </tr>
                    }
                }
                </tbody>
            </table>
        </div>
    </div>
</div>