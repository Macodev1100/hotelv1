@model hotelv1.Models.Entities.Servicio
@{
    ViewData["Title"] = "Eliminar Servicio";
}
<h2>Eliminar Servicio</h2>
<div class="alert alert-danger">¿Estás seguro que deseas eliminar este servicio?</div>
<dl class="row">
    <dt class="col-sm-2">Nombre</dt>
    <dd class="col-sm-10">@Model.Nombre</dd>
    <dt class="col-sm-2">Descripción</dt>
    <dd class="col-sm-10">@Model.Descripcion</dd>
    <dt class="col-sm-2">Precio</dt>
    <dd class="col-sm-10">@Model.Precio.ToString("C")</dd>
</dl>
<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="ServicioId" />
    <button type="submit" class="btn btn-danger">Eliminar</button>
    <a href="/Servicios" class="btn btn-secondary">Cancelar</a>
</form>