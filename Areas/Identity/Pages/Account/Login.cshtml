@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}



<style>
    body {
        background: linear-gradient(120deg, #e0eafc 0%, #cfdef3 100%);
    }
    .login-panel {
        background: #fff;
        border-radius: 18px;
        box-shadow: 0 4px 32px rgba(0,0,0,0.10);
        padding: 2.5rem 2rem 2rem 2rem;
        position: relative;
        overflow: hidden;
    }
    .login-panel:before {
        content: '';
        position: absolute;
        top: -60px; left: -60px;
        width: 160px; height: 160px;
        background: #005fa3;
        opacity: 0.08;
        border-radius: 50%;
        z-index: 0;
    }
    .login-panel:after {
        content: '';
        position: absolute;
        bottom: -60px; right: -60px;
        width: 160px; height: 160px;
        background: #ffd700;
        opacity: 0.10;
        border-radius: 50%;
        z-index: 0;
    }
    .login-panel .form-control {
        background: #f8fafc;
        border-radius: 8px;
    }
    .login-panel .btn-primary {
        background: linear-gradient(90deg, #005fa3 0%, #ffd700 100%);
        color: #fff;
        font-weight: bold;
        border: none;
        border-radius: 8px;
        box-shadow: 0 2px 8px rgba(0,95,163,0.08);
        transition: background 0.2s;
    }
    .login-panel .btn-primary:hover {
        background: linear-gradient(90deg, #003366 0%, #ffd700 100%);
    }
    .login-panel .form-label {
        color: #005fa3;
    }
    .login-panel .text-danger {
        font-size: 0.98em;
    }
    .login-panel .hotel-brand {
        font-size: 3.5rem;
        color: #005fa3;
        margin-bottom: 0.5rem;
    }
    .login-panel .brand-title {
        font-family: 'Segoe UI', sans-serif;
        font-weight: 800;
        color: #003366;
        letter-spacing: 1px;
    }
    .login-panel .brand-desc {
        color: #888;
        font-size: 1.1rem;
    }
    .login-panel .links a {
        color: #005fa3;
        font-weight: 500;
        text-decoration: none;
    }
    .login-panel .links a:hover {
        text-decoration: underline;
        color: #003366;
    }
</style>

<div class="container d-flex align-items-center justify-content-center" style="min-height: 90vh;">
    <div class="login-panel col-md-5 col-lg-4 position-relative">
        <div class="text-center mb-4 position-relative" style="z-index:1;">
            <img src="/img/logo-hotel-cuenca2.png" alt="Hotel Cuenca" style="height:90px; margin-bottom:10px; animation: logoPop 1s cubic-bezier(.4,0,.2,1); box-shadow:0 4px 24px rgba(0,95,163,0.10); border-radius:18px;" />
            <h2 class="brand-title" style="animation: fadeInDown 1.1s 0.2s both;">Iniciar Sesión</h2>
            <p class="brand-desc" style="animation: fadeInDown 1.1s 0.4s both;">Accede a tu cuenta del sistema hotelero</p>
        <style>
        @@keyframes logoPop {
            0% { transform: scale(0.7) rotate(-10deg); opacity: 0; }
            60% { transform: scale(1.1) rotate(2deg); opacity: 1; }
            100% { transform: scale(1) rotate(0); opacity: 1; }
        }
        @@keyframes fadeInDown {
            0% { opacity: 0; transform: translateY(-30px); }
            100% { opacity: 1; transform: translateY(0); }
        }
        .login-panel {
            animation: fadeInDown 0.8s cubic-bezier(.4,0,.2,1);
        }
        </style>
        </div>
        <form id="account" method="post" style="z-index:1; position:relative;">
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
            <div class="form-floating mb-3">
                <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                <label asp-for="Input.Email" class="form-label">Correo electrónico</label>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="Contraseña" />
                <label asp-for="Input.Password" class="form-label">Contraseña</label>
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="form-check mb-3">
                <input class="form-check-input" asp-for="Input.RememberMe" />
                <label asp-for="Input.RememberMe" class="form-check-label">@Html.DisplayNameFor(m => m.Input.RememberMe)</label>
            </div>
            <button id="login-submit" type="submit" class="w-100 btn btn-lg btn-primary mb-2">Iniciar Sesión</button>
            <div class="d-flex justify-content-between links">
                <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">¿No tienes cuenta? Regístrate</a>
            </div>
        </form>
        <div class="text-center mt-4" style="z-index:1; position:relative;">
            <span class="text-muted" style="font-size:0.95em;">© 2025 HotelV1. Todos los derechos reservados.</span>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
