@inject SignInManager<IdentityUser> SignInManager
@{
    var hasExternalLogins = (await SignInManager.GetExternalAuthenticationSchemesAsync()).Any();
}
<style>
    .account-nav-modern {
        background: #f6fafd;
        border-radius: 18px;
        box-shadow: 0 4px 24px rgba(120, 144, 156, 0.07);
        padding: 0.5rem 0.5rem 0.5rem 0.5rem;
        min-width: 220px;
        border: 1px solid #e3f0ff;
    }
    .account-nav-modern .nav-link {
        color: #234;
        font-weight: 500;
        font-size: 1.08rem;
        border-radius: 10px;
        margin-bottom: 0.3rem;
        transition: background 0.2s, color 0.2s;
    }
    .account-nav-modern .nav-link.active, .account-nav-modern .nav-link:focus, .account-nav-modern .nav-link:hover {
        background: linear-gradient(90deg, #b2d8f7 0%, #e3f0ff 100%);
        color: #234 !important;
        box-shadow: 0 2px 8px rgba(120, 144, 156, 0.10);
    }
    .account-nav-modern .nav-link i {
        opacity: 0.85;
    }
</style>
<ul class="nav flex-column mb-4 account-nav-modern">
    <li class="nav-item">
        <a class="nav-link @ManageNavPages.IndexNavClass(ViewContext)" id="info" asp-page="./Index">
            <i class="fas fa-info-circle me-2"></i>Información
        </a>
    </li>
    <!-- Eliminada la pestaña de edición de correo electrónico -->
    <li class="nav-item">
        <a class="nav-link @ManageNavPages.ChangePasswordNavClass(ViewContext)" id="change-password" asp-page="./ChangePassword">
            <i class="fas fa-key me-2"></i>Contraseña
        </a>
    </li>
    @if (hasExternalLogins)
    {
        <li id="external-logins" class="nav-item">
            <a id="external-login" class="nav-link @ManageNavPages.ExternalLoginsNavClass(ViewContext)" asp-page="./ExternalLogins">
                <i class="fas fa-link me-2"></i>Accesos externos
            </a>
        </li>
    }

</ul>
