@inject SignInManager<IdentityUser> SignInManager
@{
    var hasExternalLogins = (await SignInManager.GetExternalAuthenticationSchemesAsync()).Any();
}
<style>
    .account-nav-modern {
        background: #f1f5fa;
        border-radius: 18px;
        box-shadow: 0 4px 24px rgba(0,0,0,0.07);
        padding: 0.5rem 0.5rem 0.5rem 0.5rem;
        min-width: 220px;
        border: 1px solid #e3e8ee;
    }
    .account-nav-modern .nav-link {
        color: #222;
        font-weight: 500;
        font-size: 1.08rem;
        border-radius: 10px;
        margin-bottom: 0.3rem;
        transition: background 0.2s, color 0.2s;
    }
    .account-nav-modern .nav-link.active, .account-nav-modern .nav-link:focus, .account-nav-modern .nav-link:hover {
        background: linear-gradient(90deg, #2563eb 0%, #38bdf8 100%);
        color: #fff !important;
        box-shadow: 0 2px 8px rgba(37,99,235,0.10);
    }
    .account-nav-modern .nav-link i {
        opacity: 0.85;
    }
</style>
<ul class="nav flex-column mb-4 account-nav-modern">
    <li class="nav-item">
        <a class="nav-link @ManageNavPages.IndexNavClass(ViewContext)" id="profile" asp-page="./Index">
            <i class="fas fa-user-circle me-2"></i>Perfil
        </a>
    </li>
    <li class="nav-item">
        <a class="nav-link @ManageNavPages.EmailNavClass(ViewContext)" id="email" asp-page="./Email">
            <i class="fas fa-envelope me-2"></i>Correo electrónico
        </a>
    </li>
    <li class="nav-item">
        <a class="nav-link @ManageNavPages.ChangePasswordNavClass(ViewContext)" id="change-password" asp-page="./ChangePassword">
            <i class="fas fa-key me-2"></i>Contraseña
        </a>
    </li>
    @if (hasExternalLogins)
    {
        <li id="external-logins" class="nav-item">
            <a id="external-login" class="nav-link @ManageNavPages.ExternalLoginsNavClass(ViewContext)" asp-page="./ExternalLogins">
                <i class="fas fa-link me-2"></i>Accesos externos
            </a>
        </li>
    }
    <li class="nav-item">
        <a class="nav-link @ManageNavPages.TwoFactorAuthenticationNavClass(ViewContext)" id="two-factor" asp-page="./TwoFactorAuthentication">
            <i class="fas fa-shield-alt me-2"></i>Autenticación en dos pasos
        </a>
    </li>
    <li class="nav-item">
        <a class="nav-link @ManageNavPages.PersonalDataNavClass(ViewContext)" id="personal-data" asp-page="./PersonalData">
            <i class="fas fa-id-card me-2"></i>Datos personales
        </a>
    </li>
</ul>
