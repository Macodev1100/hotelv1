@page
@model EmailModel
@{
    ViewData["Title"] = "Correo electrónico";
    ViewData["ActivePage"] = ManageNavPages.Email;
}
<link rel="stylesheet" href="~/css/identity-custom.css" />
<div class="identity-container">
    <div class="identity-card">
        <div class="icon mb-2"><i class="fas fa-envelope"></i></div>
        <h2>Cambiar correo electrónico</h2>
        <p class="text-muted mb-4">Gestiona tu dirección de correo electrónico</p>
        <partial name="_StatusMessage" model="Model.StatusMessage" />
        <form id="email-form" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
            <div class="mb-3 text-start">
                <label asp-for="Email" class="form-label"></label>
                <input asp-for="Email" class="form-control" disabled />
            </div>
            <div class="mb-3 text-start">
                <label asp-for="Input.NewEmail" class="form-label"></label>
                <input asp-for="Input.NewEmail" class="form-control" placeholder="Nuevo correo electrónico" />
                <span asp-validation-for="Input.NewEmail" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary w-100">Enviar confirmación</button>
        </form>
    </div>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
