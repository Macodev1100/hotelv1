@page
@model IndexModel
@{
    ViewData["Title"] = "Perfil";
    ViewData["ActivePage"] = ManageNavPages.Index;
}


<link rel="stylesheet" href="~/css/identity-custom.css" />
<div class="identity-container">
    <div class="identity-card p-5">
        <div class="icon mb-2"><i class="fas fa-user-circle"></i></div>
        <h2 class="mb-2">Perfil de usuario</h2>
        <p class="text-muted mb-4">Consulta tus datos personales</p>
        <partial name="_StatusMessage" model="Model.StatusMessage" />
        <div class="mb-3 text-start">
            <label class="form-label">Usuario</label>
            <input asp-for="Username" class="form-control" placeholder="Usuario" disabled />
        </div>
        <div class="mb-3 text-start">
            <label asp-for="Input.Email" class="form-label">Correo electrónico</label>
            <input asp-for="Input.Email" class="form-control" placeholder="Correo electrónico" disabled />
        </div>
        <div class="mb-3 text-start">
            <label class="form-label">Teléfono</label>
            <input asp-for="Input.PhoneNumber" class="form-control" placeholder="Teléfono" disabled />
        </div>
        <div class="mb-3 text-start">
            <label class="form-label">Rol</label>
            <input value="@(User.IsInRole("Administrador") ? "Administrador" : User.IsInRole("Recepcionista") ? "Recepcionista" : User.IsInRole("Gerente") ? "Gerente" : User.IsInRole("Mantenimiento") ? "Mantenimiento" : User.IsInRole("Limpieza") ? "Limpieza" : User.IsInRole("Empleado") ? "Empleado" : "Usuario")" class="form-control" disabled />
        </div>
        <a href="/Identity/Account/Manage/Editar" class="btn btn-info w-100 mt-3 py-2 fw-bold" style="background: linear-gradient(90deg, #b2d8f7 0%, #e3f0ff 100%); color: #234; border: none; font-size: 1.15rem;">Editar información</a>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
