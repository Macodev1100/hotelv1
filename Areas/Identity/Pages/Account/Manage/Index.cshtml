@page
@model IndexModel
@{
    ViewData["Title"] = "Perfil";
    ViewData["ActivePage"] = ManageNavPages.Index;
}


<link rel="stylesheet" href="~/css/identity-custom.css" />
<div class="identity-container">
    <div class="identity-card">
        <div class="icon mb-2"><i class="fas fa-user-circle"></i></div>
        <h2>Mi perfil</h2>
        <p class="text-muted mb-4">Gestiona tu información personal</p>
        <partial name="_StatusMessage" model="Model.StatusMessage" />
        <form id="profile-form" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
            <div class="mb-3 text-start">
                <label asp-for="Username" class="form-label"></label>
                <input asp-for="Username" class="form-control" placeholder="Nombre de usuario" disabled />
            </div>
            <div class="mb-3 text-start">
                <label asp-for="Input.PhoneNumber" class="form-label"></label>
                <input asp-for="Input.PhoneNumber" class="form-control" placeholder="Teléfono" />
                <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
            </div>
            <button id="update-profile-button" type="submit" class="btn btn-primary w-100">Guardar cambios</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
