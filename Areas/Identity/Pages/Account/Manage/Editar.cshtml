@page
@model IndexModel // Cambia esto por el modelo correcto si tienes uno específico para edición
@{
    ViewData["Title"] = "Editar información";
    ViewData["ActivePage"] = "Editar";
}
<link rel="stylesheet" href="~/css/identity-custom.css" />
<div class="identity-container">
    <div class="identity-card p-5">
        <div class="icon mb-2"><i class="fas fa-user-edit"></i></div>
        <h2 class="mb-2">Editar información</h2>
        <p class="text-muted mb-4">Modifica tus datos personales</p>
        <partial name="_StatusMessage" model="Model.StatusMessage" />
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
            <div class="mb-3 text-start">
                <label class="form-label">Usuario</label>
                <input asp-for="Username" class="form-control" placeholder="Usuario" disabled />
            </div>
            <div class="mb-3 text-start">
                <label asp-for="Input.Email" class="form-label">Correo electrónico</label>
                <input asp-for="Input.Email" class="form-control" placeholder="Correo electrónico" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="mb-3 text-start">
                <label asp-for="Input.PhoneNumber" class="form-label">Teléfono</label>
                <input asp-for="Input.PhoneNumber" class="form-control" placeholder="Teléfono" />
                <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-info w-100 mt-3 py-2 fw-bold" style="background: linear-gradient(90deg, #b2d8f7 0%, #e3f0ff 100%); color: #234; border: none; font-size: 1.15rem;">Guardar cambios</button>
            <a asp-page="./Index" class="btn btn-link w-100 mt-2">Cancelar</a>
        </form>
    </div>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
