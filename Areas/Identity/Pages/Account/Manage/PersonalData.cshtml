@page
@model PersonalDataModel
@{
    ViewData["Title"] = "Datos personales";
    ViewData["ActivePage"] = ManageNavPages.PersonalData;
}
<link rel="stylesheet" href="~/css/identity-custom.css" />
<div class="identity-container">
    <div class="identity-card">
        <div class="icon mb-2"><i class="fas fa-id-card"></i></div>
        <h2>Datos personales</h2>
        <p class="text-muted mb-4">Gestiona tus datos personales y privacidad</p>
        <partial name="_StatusMessage" model="Model.StatusMessage" />
        <form id="personal-data-form" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
            <div class="mb-3 text-start">
                <label asp-for="Username" class="form-label"></label>
                <input asp-for="Username" class="form-control" disabled />
            </div>
            <div class="mb-3 text-start">
                <label asp-for="Email" class="form-label"></label>
                <input asp-for="Email" class="form-control" disabled />
            </div>
            <div class="mb-3 text-start">
                <label asp-for="PhoneNumber" class="form-label"></label>
                <input asp-for="PhoneNumber" class="form-control" disabled />
            </div>
            <button type="submit" class="btn btn-primary w-100">Descargar mis datos</button>
        </form>
        <hr />
        <form id="delete-personal-data" method="post" asp-page-handler="Delete">
            <button type="submit" class="btn btn-danger w-100 mt-2">Eliminar mi cuenta</button>
        </form>
    </div>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
