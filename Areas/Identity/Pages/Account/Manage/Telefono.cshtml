@page
@model IndexModel // Cambia esto por el modelo correcto si tienes uno específico para teléfono
@{
    ViewData["Title"] = "Editar Teléfono";
    ViewData["ActivePage"] = "Telefono";
}
<link rel="stylesheet" href="~/css/identity-custom.css" />
<div class="identity-container">
    <div class="identity-card">
        <div class="icon mb-2"><i class="fas fa-phone"></i></div>
        <h2>Editar teléfono</h2>
        <p class="text-muted mb-4">Actualiza tu número de teléfono</p>
        <partial name="_StatusMessage" model="Model.StatusMessage" />
        <form id="telefono-form" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
            <div class="mb-3 text-start">
                <label asp-for="Input.PhoneNumber" class="form-label">Teléfono</label>
                <input asp-for="Input.PhoneNumber" class="form-control" placeholder="Teléfono" />
                <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary w-100">Guardar cambios</button>
        </form>
    </div>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
